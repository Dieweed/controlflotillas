<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="7003" id="com.finvivir.controlFlotillas" version="0.0.6" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>ControlFlotillas</name>
    <description>App para administrar las flotillas de finvivir</description>
    <author>Avansys</author>
    <content src="index.html" />
    <preference name="android-build-tool" value="gradle" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <access origin="*" />
    <preference name="phonegap-version" value="cli-6.2.0" />
    <preference name="xwalkMultipleApk" value="false" />
    <plugin name="cordova-plugin-crosswalk-webview" spec="1.8.0" />
    <plugin name="cordova-plugin-statusbar" spec="2.1.3" />
    <plugin name="cordova-plugin-device" spec="1.1.2" />
    <plugin name="cordova-plugin-splashscreen" spec="3.2.2" />
    <plugin name="cordova-plugin-compat" spec="1.0.0" />
    <plugin name="cordova-plugin-file" spec="4.2.0" />
    <plugin name="cordova-plugin-file-transfer" spec="1.5.1" />
    <plugin name="cordova-plugin-whitelist" spec="1.2.2" />
    <platform name="ios">
        <preference name="AutoHideSplashScreen" value="true" />
        <preference name="FadeSplashScreen" value="false" />
        <preference name="FadeSplashScreenDuration" value="2" />
        <preference name="ShowSplashScreenSpinner" value="false" />
        <preference name="StatusBarOverlaysWebView" value="false" />
        <preference name="StatusBarBackgroundColor" value="#000000" />
        <preference name="StatusBarStyle" value="lightcontent" />
    </platform>
    <platform name="android">
        <preference name="SplashMaintainAspectRatio" value="false" />
    </platform>
    <preference name="xwalkCommandLine" value="--disable-pull-to-refresh-effect --ignore-gpu-blacklist " />
    <platform name="android">
        <preference name="android-minSdkVersion" value="14" />
        <preference name="android-targetSdkVersion" value="26" />
        <preference name="android-installLocation" value="auto" />
        <preference name="android-signed" value="true" />
        <preference name="AndroidLaunchMode" value="singleTop" />
        <preference name="Fullscreen" value="false" />
    </platform>
    <splash density="ldpi" height="426" orientation="portrait" platform="android" src="package-assets/splash320x426.png" width="320" />
    <splash density="mdpi" height="470" orientation="portrait" platform="android" src="package-assets/splash320x470.png" width="320" />
    <splash density="hdpi" height="640" orientation="portrait" platform="android" src="package-assets/splash480x640.png" width="480" />
    <splash density="xhdpi" height="960" orientation="portrait" platform="android" src="package-assets/splash720x960.png" width="720" />
    <icon density="ldpi" height="36" platform="android" src="package-assets/icon_36x36.png" width="36" />
    <icon density="mdpi" height="48" platform="android" src="package-assets/icon_48x48.png" width="48" />
    <icon density="hdpi" height="72" platform="android" src="package-assets/icon_72x72.png" width="72" />
    <icon density="xhdpi" height="96" platform="android" src="package-assets/icon_96x96.png" width="96" />
    <config-file mode="merge" parent="/manifest/application" platform="android">
        <activity android:launchMode="singleTop" />
    </config-file>
    <plugin name="cordova-android-support-gradle-release">
        <variable name="ANDROID_SUPPORT_VERSION" value="26.0.0"/>
    </plugin>
</widget>
